            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           );
CREATE UNIQUE INDEX LGONZALES.UNQ_EMP_ANIO_MES ON LGONZALES.SGC_SUELDO_PLANILLA
(CODEMPRESA, ANIO_PLANILLA, MES_PLANILLA, CODLOCALIDAD, CODTRABAJADOR)
LOGGING
TABLESPACE XRAY_DATA
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED

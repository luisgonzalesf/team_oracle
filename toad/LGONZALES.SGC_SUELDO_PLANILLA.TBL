           );

ALTER TABLE LGONZALES.SGC_SUELDO_PLANILLA ADD (
  CONSTRAINT CHK_EST_CTS
  CHECK (est_cts in ('P','T') )
  ENABLE VALIDATE
,  CONSTRAINT PK_SUELDO_PLANILLA
  PRIMARY KEY
  (ID_PLANILLA)
  USING INDEX LGONZALES.PK_SUELDO_PLANILLA
